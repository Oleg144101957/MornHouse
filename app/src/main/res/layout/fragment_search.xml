<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".presentation.screens.SearchFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_search" />

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/hint_for_search"/>

    <Button
        android:id="@+id/btnSearchNumb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_number"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnSearchRandomNumb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/search_random_number"/>

</LinearLayout>